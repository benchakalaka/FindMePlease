<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/dialog_scroll"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content" >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <!-- WRAPPER LAYOUT FOR GIF AND TEXT VIEW -->
        <LinearLayout
            android:layout_width="318dp"
            android:layout_height="58dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/custom_border"
            android:orientation="horizontal" >

            <!-- GIF -->            <edu.glyndwr.tools.AnimatedView
                android:layout_width="50dp"
                android:layout_height="wrap_content" />

            <!-- BRIEF EXPLONATION OF DIALOG TEXT VIEW -->
            <TextView
                android:id="@+id/dialog_textview_registration_detail_header"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="All avaliable registration information"
                android:textColor="#388E8E"
                android:textSize="15dp"
                android:textStyle="italic|bold" />
        </LinearLayout>

        <!-- NAME TEXTWIES/EDITTEXT BLOCK -->
        <TextView
            android:id="@+id/dialog_textview_registration_detail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Karpachev Ihor Ihorovich"
            android:textSize="15dp"
            android:textStyle="italic|bold" />

    
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/dialog_button_registration_detail_ok"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/ok" />
        </LinearLayout>
    </LinearLayout>

</ScrollView>